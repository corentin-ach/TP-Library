@using ASP.Server.Controllers
@model ModifyBookModel
@{
    ViewData["Title"] = "Modify";
}
<style>
.input-group {
    margin-top:10px;
    display:flex;
    justify-content:space-between;
    flex-wrap:wrap;
}
input, textarea, select {
    flex-basis:85%;
}
label {
    flex-basis:10%;
}
</style>

<!-- Voici une facon de faire, mais ce n'est pas la seul, a vous de jouer ! -->
<form asp-controller="Book" asp-action="Edit">
    <div class="input-group">
        <input asp-for="Id" value="@Model.Id" type="hidden"/>
    </div>
    <div class="input-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" value="@Model.Name"/>
    </div>
    <div class="input-group">
        <label asp-for="Contenu"></label>
        <input asp-for="Contenu" value="@Model.Contenu"/>
    </div>
    <div class="input-group">
        <label asp-for="Prix"></label>
        <input asp-for="Prix" value="@Model.Prix"/>
    </div>
    <div class="input-group">
        <label asp-for="Auteur"></label>
        <input asp-for="Auteur" value="@Model.Auteur"/>
    </div>

    <div class="input-group">
        <label asp-for="Genres"></label>
        <input asp-for="Genres"/>
    </div>
    
    
    <input type="submit" value="Modify" style="width: 100%; margin-top: 50px" />
</form>